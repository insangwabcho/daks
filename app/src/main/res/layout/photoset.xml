<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.darks.PhotoSetActivity">

  <ScrollView
    android:layout_width="0dp"
    android:layout_height="200dp"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="8dp"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:id="@+id/scrollView2">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <ListView
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    </LinearLayout>
  </ScrollView>

  <ImageView
    android:id="@+id/imageView2"
    android:layout_width="261dp"
    android:layout_height="0dp"
    app:srcCompat="@mipmap/ic_launcher"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintBottom_creator="1"
    android:layout_marginStart="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/scrollView2"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginBottom="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="8dp"/>

  <Button
    android:id="@+id/button2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:text="Button"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintBottom_creator="1"
    android:layout_marginStart="13dp"
    app:layout_constraintBottom_toBottomOf="@+id/radio2"
    android:layout_marginEnd="11dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="2dp"
    tools:layout_constraintLeft_creator="1"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="@+id/radio5"
    app:layout_constraintLeft_toRightOf="@+id/radio2"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="11dp"/>

  <RadioGroup
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:layout_marginTop="221dp"
    android:checkedButton="@+id/radio5"
    android:visibility="visible"
    app:layout_constraintHorizontal_bias="0.645"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintTop_creator="1"
    android:id="@+id/radioGroup">

    <RadioButton
      android:id="@+id/radio1"
      android:layout_width="match_parent"
      android:layout_height="25dp"
      android:layout_marginLeft="12dp"
      android:layout_marginStart="12dp"
      android:layout_weight="1"
      android:text="1번사진"
      app:layout_constraintBottom_toTopOf="@+id/radio4"
      app:layout_constraintLeft_toRightOf="@+id/imageView2"
      tools:layout_constraintBottom_creator="1"
      tools:layout_constraintLeft_creator="1"/>

    <RadioButton
      android:id="@+id/radio2"
      android:layout_width="match_parent"
      android:layout_height="25dp"
      android:layout_marginBottom="8dp"
      android:layout_weight="1"
      android:text="2번사진"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="@+id/radio4"
      app:layout_constraintRight_toRightOf="@+id/radio4"
      tools:layout_constraintBottom_creator="1"
      tools:layout_constraintLeft_creator="1"
      tools:layout_constraintRight_creator="1"/>

    <RadioButton
      android:id="@+id/radio3"
      android:layout_width="match_parent"
      android:layout_height="25dp"
      android:text="3번사진"
      android:visibility="visible"
      app:layout_constraintBottom_toTopOf="@+id/radio5"
      app:layout_constraintLeft_toLeftOf="@+id/radio5"
      app:layout_constraintRight_toRightOf="@+id/radio5"
      tools:layout_constraintBottom_creator="1"
      tools:layout_constraintLeft_creator="1"
      tools:layout_constraintRight_creator="1"/>

    <RadioButton
      android:id="@+id/radio4"
      android:layout_width="match_parent"
      android:layout_height="25dp"
      android:layout_weight="1"
      android:text="4번사진"
      app:layout_constraintBottom_toTopOf="@+id/radio2"
      app:layout_constraintLeft_toLeftOf="@+id/radio5"
      app:layout_constraintRight_toRightOf="@+id/radio5"
      tools:layout_constraintBottom_creator="1"
      tools:layout_constraintLeft_creator="1"
      tools:layout_constraintRight_creator="1"/>

    <RadioButton
      android:id="@+id/radio5"
      android:layout_width="match_parent"
      android:layout_height="25dp"
      android:layout_weight="1"
      android:text="5번사진"
      app:layout_constraintBottom_toTopOf="@+id/radio2"
      app:layout_constraintLeft_toLeftOf="@+id/radio2"
      app:layout_constraintRight_toRightOf="@+id/radio2"
      tools:layout_constraintBottom_creator="1"
      tools:layout_constraintLeft_creator="1"
      tools:layout_constraintRight_creator="1"/>

  </RadioGroup>

  <Button
    android:id="@+id/btnOk"
    android:layout_width="0dp"
    android:layout_height="50dp"
    android:layout_marginEnd="15dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="15dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="14dp"
    android:text="확인"
    app:layout_constraintLeft_toRightOf="@+id/radioGroup"
    app:layout_constraintRight_toRightOf="@+id/scrollView2"
    app:layout_constraintTop_toBottomOf="@+id/scrollView2"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintTop_creator="1"/>

  <Button
    android:id="@+id/btnExit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="종료"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    android:layout_marginEnd="17dp"
    app:layout_constraintRight_toRightOf="@+id/btnOk"
    android:layout_marginTop="13dp"
    app:layout_constraintTop_toBottomOf="@+id/btnOk"
    android:layout_marginRight="17dp"/>

</android.support.constraint.ConstraintLayout>
